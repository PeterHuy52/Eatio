<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="main_input_login_edittext">
        <item name="android:maxLength">26</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="main_login_btn">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:background">@drawable/primary_action_btn_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
    </style>

    <style name="login_message_tv">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="login_secondary_btn">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#00BFA5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="page_title_tv">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#EE00695C</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="input_custom_container">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="secondary_tv">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primaryLightText</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="fonda_statistic_primary_txt">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="chips" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chips.actionButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
