<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_input_login_edittext">
        <item name="android:maxLength">26</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="main_login_btn">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:background">#00C853</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
    </style>

    <style name="login_message_tv">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="login_secondary_btn">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#00BFA5</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
