<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/utilities_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCFCFC">
        <TextView android:id="@+id/utilities_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/white_soft_cyan"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:text="Utilities"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/add_more_btn"
            android:layout_toLeftOf="@+id/add_more_btn"
            android:layout_below="@+id/utilities_label"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/utilities_rv_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone"
                tools:listitem="@layout/view_chips_tv"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">

            </android.support.v7.widget.RecyclerView>
            <EditText android:id="@+id/add_more_utils_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_toLeftOf="@+id/accept_btn"
                android:layout_toStartOf="@+id/accept_btn"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/accept_btn"
                android:text="\u2713"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/chips.actionButton"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/add_more_btn"
            android:text="\u002B"
            style="@style/chips.actionButton"
            android:layout_below="@+id/utilities_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</merge>
