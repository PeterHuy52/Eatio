<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_left_menu_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/nav_header_spacing"
        android:paddingRight="@dimen/nav_header_spacing">

        <ImageView
            android:id="@+id/icon_left_menu"
            android:layout_width="@dimen/item_left_menu_icon"
            android:layout_height="@dimen/item_left_menu_icon"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/left_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/nav_header_spacing"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</merge>